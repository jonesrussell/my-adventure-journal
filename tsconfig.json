{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2024",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  // "include": [
  //   "eslint.config.js",
  //   "eslint.config.mjs",
  //   "next-env.d.ts",
  //   "next.config.mjs",
  //   "postcss.config.mjs",
  //   "seedDatabase.ts",
  //   "src/**/*.ts",
  //   "src/**/*.tsx",
  //   "tailwind.config.ts",
  //   "types/*.d.ts"
  // ],
  "exclude": [
    ".next/*"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
