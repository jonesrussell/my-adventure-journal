generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Define your models here
model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  username      String @unique
  name          String
  email         String @unique
  hashedPassword String
  password      String?
}

model Adventure {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  location    String
  description String
}
